<?import com.gluonhq.charm.glisten.control.ProgressBar?>
<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<View fx:id="badge" styleClass="carve-badge" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gluonhq.otn.views.BadgePresenter">
    <bottom>
        <HBox fx:id="submitContainer" alignment="center" prefHeight="50">
            <Button fx:id="reset" maxHeight="Infinity" maxWidth="Infinity" styleClass="reset-button" HBox.hgrow="ALWAYS" />
            <Button fx:id="placeOrder" maxHeight="Infinity" maxWidth="Infinity" styleClass="submit-button" HBox.hgrow="ALWAYS" />
        </HBox>
    </bottom>
   <top>
      <ProgressBar fx:id="indicator" progress="0.0" BorderPane.alignment="CENTER" />
   </top>
</View>
