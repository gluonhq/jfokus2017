<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import com.gluonhq.charm.glisten.control.ImageGallery?>
<View fx:id="gameView" styleClass="game-view" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gluonhq.otn.views.GamePresenter">
    <top>
        <VBox fx:id="instructionsContainer" styleClass="instructions-container">
            <Label fx:id="instructions" styleClass="instructions"/>
        </VBox>
    </top>
    <center>
        <ImageGallery fx:id="imageGallery"/>
    </center>
    <bottom>
        <HBox fx:id="submitContainer" alignment="center" prefHeight="50">
            <Button fx:id="gameButton" styleClass="submit-button" HBox.hgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity"/>
        </HBox>
    </bottom>
</View>
